{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "allowJs": true,
    "target": "es2016",
    "sourceMap": true,
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules/@types/*", "*"]
    },
    "lib": [
      "es5",
      "es6",
      "dom",
      "es2015.core",
      "es2015.collection",
      "es2015.generator",
      "es2015.iterable",
      "es2015.promise",
      "es2015.proxy",
      "es2015.reflect",
      "es2015.symbol",
      "es2015.symbol.wellknown",
      "es2017",
      "esnext.asynciterable"
    ],
    "experimentalDecorators": true
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.spec.ts"],
  "exclude": ["node_modules", "coverage", "build", "dist", ".git"],

  "forceConsistentCasingInFileNames": true,

  "strict": true, // sets noImplicitAny, noImplicitThis, alwaysStrict and strictNullChecks
  "noImplicitReturns": true,

  "noUnusedLocals": true,
  "noUnusedParameters": true,

  "removeComments": true,
  "preserveConstEnums": true
}
